SET FOREIGN_KEY_CHECKS = 0;
DROP TABLE IF EXISTS `TBL_PRODUCTOS`;
DROP TABLE IF EXISTS `TBL_CIUDADES`;
DROP TABLE IF EXISTS `TBL_COMUNAS`;
DROP TABLE IF EXISTS `TBL_PAISES`;
DROP TABLE IF EXISTS `TBL_CLIENTES`;
DROP TABLE IF EXISTS `TBL_USUARIOS`;
DROP TABLE IF EXISTS `TBL_ADMIN`;
DROP TABLE IF EXISTS `TBL_TIPOS_PRODUCTOS`;
DROP TABLE IF EXISTS `TBL_NUMEROS_ALMACEN`;
DROP TABLE IF EXISTS `TBL_TIPOS_ALMACEN`;
DROP TABLE IF EXISTS `TBL_UBICACIONES`;
DROP TABLE IF EXISTS `TBL_PEDIDOS_VENTA`;
DROP TABLE IF EXISTS `TBL_PEDIDOS_COMPRA`;
DROP TABLE IF EXISTS `TBL_DETALLE_PEDIDOS`;
DROP TABLE IF EXISTS `TBL_SOCIEDADES`;
DROP TABLE IF EXISTS `Entity1`;
SET FOREIGN_KEY_CHECKS = 1;

CREATE TABLE `TBL_PRODUCTOS` (
    `ID_PRODUCTO` VARCHAR(18) NOT NULL,
    `DESC_PRODUCTO` VARCHAR(30) NOT NULL,
    `FECHA_CREACION` DATE NOT NULL,
    `PESO` DECIMAL(13) NOT NULL,
    `ID_TIPO_PRODUCTO` VARCHAR(4) NOT NULL,
    PRIMARY KEY (`ID_PRODUCTO`, `ID_TIPO_PRODUCTO`)
);

CREATE TABLE `TBL_CIUDADES` (
    `ID_PAIS` VARCHAR(4) NOT NULL,
    `ID_CIUDAD` VARCHAR(4) NOT NULL,
    `NOMBRE_CIUDAD` INTEGER NOT NULL,
    PRIMARY KEY (`ID_PAIS`, `ID_CIUDAD`)
);

CREATE TABLE `TBL_COMUNAS` (
    `ID_PAIS` VARCHAR(4) NOT NULL,
    `ID_CIUDAD` VARCHAR(4) NOT NULL,
    `ID_COMUNA` VARCHAR(4) NOT NULL,
    `NOMBRE_COMUNA` VARCHAR(20) NOT NULL,
    PRIMARY KEY (`ID_PAIS`, `ID_CIUDAD`, `ID_COMUNA`)
);

CREATE TABLE `TBL_PAISES` (
    `ID_PAIS` VARCHAR(4) NOT NULL,
    `NOMBRE_PAIS` VARCHAR(20) NOT NULL,
    PRIMARY KEY (`ID_PAIS`)
);

CREATE TABLE `TBL_CLIENTES` (
    `ID_PAIS` VARCHAR(4) NOT NULL,
    `ID_CIUDAD` VARCHAR(4) NOT NULL,
    `ID_COMUNA` VARCHAR(4) NOT NULL,
    `ID_CLIENTE` VARCHAR(16) NOT NULL,
    `RAZON_SOCIAL` VARCHAR(40) NOT NULL,
    `ID_FISCAL` VARCHAR(20) NOT NULL,
    `NOMBRE1_CLIENTE` VARCHAR(35) NOT NULL,
    `NOMBRE2_CLIENTE` VARCHAR(35) NOT NULL,
    `CODIGO_POSTAL` VARCHAR(10) NOT NULL,
    `CALLE_CLIENTE` VARCHAR(35) NOT NULL,
    `TELEFONO_CLIENTE` VARCHAR(16) NOT NULL,
    `DIRECCION_CLIENTE` VARCHAR(10) NOT NULL,
    PRIMARY KEY (`ID_PAIS`, `ID_CIUDAD`, `ID_COMUNA`, `ID_CLIENTE`, `RAZON_SOCIAL`)
);

CREATE TABLE `TBL_USUARIOS` (
    `ID_USUARIO` VARCHAR(4) NOT NULL,
    `NOMBRE_USUARIO` VARCHAR(10) NOT NULL,
    PRIMARY KEY (`ID_USUARIO`)
);

CREATE TABLE `TBL_ADMIN` (
    `ID_ADMIN` VARCHAR(4) NOT NULL,
    `ID_USUARIO` VARCHAR(4) NOT NULL,
    `NOMBRE1_ADMIN` VARCHAR(35) NOT NULL,
    `NOMBRE2_ADMIN` VARCHAR(35) NOT NULL,
    `RUT_ADMIN` VARCHAR(10) NOT NULL,
    `USUARIO` VARCHAR(10) NOT NULL,
    `PASSWORD` VARCHAR(10) NOT NULL,
    PRIMARY KEY (`ID_ADMIN`, `ID_USUARIO`)
);

CREATE TABLE `TBL_TIPOS_PRODUCTOS` (
    `ID_TIPO_PRODUCTO` VARCHAR(4) NOT NULL,
    `NOMBRE_TIPO_PRODUCTO` VARCHAR(10) NOT NULL,
    `DESCRIPCION_TIPO_PRODUCTO` VARCHAR(35) NOT NULL,
    PRIMARY KEY (`ID_TIPO_PRODUCTO`)
);

CREATE TABLE `TBL_NUMEROS_ALMACEN` (
    `ID_WHS` VARCHAR(4) NOT NULL,
    `DESC_WHS` VARCHAR(50) NOT NULL,
    PRIMARY KEY (`ID_WHS`)
);

CREATE TABLE `TBL_TIPOS_ALMACEN` (
    `ID_WHS` VARCHAR(4) NOT NULL,
    `ID_TIPO_ALM` VARCHAR(4) NOT NULL,
    `DESC_TIPO_ALM` VARCHAR(50) NOT NULL,
    `ESTRATEGIA_ENT` VARCHAR(2) NOT NULL,
    `ESTRATEGIA_SAL` VARCHAR(2) NOT NULL,
    `CTRL_CAPACIDAD` BOOLEAN NOT NULL,
    `TIPO_CAPACIDAD` VARCHAR(2) NOT NULL,
    PRIMARY KEY (`ID_WHS`, `ID_TIPO_ALM`)
);

CREATE TABLE `TBL_UBICACIONES` (
    `ID_WHS` VARCHAR(4) NOT NULL,
    `ID_TIPO_ALM` VARCHAR(4) NOT NULL,
    `ID_UBICACION` VARCHAR(20) NOT NULL,
    `AREA_ALM` VARCHAR(4) NOT NULL,
    `AREA_PICK` VARCHAR(4) NOT NULL,
    `VERIFICACION` VARCHAR(20) NOT NULL,
    `CAPACIDAD` INTEGER NOT NULL,
    `PESO` INTEGER NOT NULL,
    PRIMARY KEY (`ID_WHS`, `ID_TIPO_ALM`, `ID_UBICACION`)
);

CREATE TABLE `TBL_PEDIDOS_VENTA` (
    `ID_PEDIDO` VARCHAR(10) NOT NULL,
    `ID_CLIENTE` VARCHAR(16) NOT NULL,
    `FECHA` DATE NOT NULL,
    PRIMARY KEY (`ID_PEDIDO`, `ID_CLIENTE`)
);

CREATE TABLE `TBL_PEDIDOS_COMPRA` (
    `ID_PEDIDO` VARCHAR(4) NOT NULL,
    `ID_CLIENTE` VARCHAR(16) NOT NULL,
    `FECHA` DATE NOT NULL,
    PRIMARY KEY (`ID_PEDIDO`, `ID_CLIENTE`)
);

CREATE TABLE `TBL_DETALLE_PEDIDOS` (
    `ID_DETALLE_PEDIDO` VARCHAR(10) NOT NULL,
    `ID_UBICACION` VARCHAR(20) NOT NULL,
    `ID_PRODUCTO` VARCHAR(18) NOT NULL,
    `POSICION` INTEGER NOT NULL,
    `CANTIDAD` DECIMAL NOT NULL,
    `FECHA` DATE NOT NULL,
    PRIMARY KEY (`ID_DETALLE_PEDIDO`, `ID_UBICACION`, `ID_PRODUCTO`)
);

CREATE TABLE `TBL_SOCIEDADES` (
    `ID_SOCIEDAD` VARCHAR(4) NOT NULL,
    `NOMBRE_SOCIEDAD` VARCHAR(25) NOT NULL,
    PRIMARY KEY (`ID_SOCIEDAD`)
);

CREATE TABLE `Entity1` (
);
